<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:macros="sap.fe.macros">
	  <VBox>
        <Table id="table" core:require="{ handler: 'preadvanceaplist/ext/fragment/PoLineitems'}" selectionChange="handler.onRowSelected" mode="MultiSelect"
            items="{
					path: '/polineitem'}">
            <columns>
                <Column>
                    <Text id="itemId" text="Item No" />
                </Column>
                <Column>
                    <Text text="Item Description" />
                </Column>
                <Column >
                    <Text text="Item Description Condition" />
                </Column>
                <Column>
                    <Text text="Plant" />
                </Column>
                <Column>
                    <Text text="Unit Price" />
                </Column>
                <Column>
                    <Text text="Quantity" />
                </Column>
                <Column>
                    <Text text="CGST %" />
                </Column>
                <Column>
                    <Text text="SGST %" />
                </Column>
                <Column>
                    <Text text="CGST Value" />
                </Column>
                <Column>
                    <Text text="SGST Value" />
                </Column>
                <Column>
                    <Text text="Amount" visible="false"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem >
                    <cells>
                        <Text text="{itemno}" />
                        <Text text="{item_desc}" />
                        <Text text="{item_desc_cond}"  />
                        <Text text="{plant}" />
                        <Text text="{unit_price}" />
                        <Text text="{quantity}" />
                        <Text text="{cgst_percentage}" />
                        <Text text="{sgst_percentage}" />
                        <Text text="{cgst_value}" />
                        <Text text="{sgst_value}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>
</core:FragmentDefinition>